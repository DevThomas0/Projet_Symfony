{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1 class="mb-4">Réinitialiser le mot de passe</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(resetForm) }}
                    <div class="mb-3">
                        {{ form_row(resetForm.plainPassword) }}
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Enregistrer le nouveau mot de passe</button>
                    </div>
                {{ form_end(resetForm) }}
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_login') }}">Retour à la page de connexion</a>
        </div>
    </div>
</div>
{% endblock %}


